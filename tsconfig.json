{
    "compilerOptions": {
        "outDir": "./",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        //"noUnusedLocals": true,
        //"noUnusedParameters": true,
        "strictNullChecks": true,
        "experimentalDecorators": true
    },
    //Adding files here individually is required to have VisualStudio Code 
    //accept the decorator syntax. Hopefully this will be fixed in the future
    "files": [
        "./main.ts",
        "./renderer.ts",
        "./app/stores/ImageStore.tsx"

    ]
}