{
    "compilerOptions": {
        "outDir": "./",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        //"noUnusedLocals": true,
        //"noUnusedParameters": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    //Adding files here individually is required to have VisualStudio Code 
    //accept the decorator syntax. Hopefully this will be fixed in the future
    "files": [
        "./main.ts",
        "./src/app/mainWindow.tsx",
        "./src/app/plotWindow.tsx",
        "./src/stores/ImageStore.ts",
        "./src/stores/PopulationStore.ts",
        "./src/components/ImageViewer.tsx",
        "./src/components/MainApp.tsx",
        "./src/components/ChannelControls.tsx",
        "./src/components/SegmentationControls.tsx",
        "./src/components/ScatterPlot.tsx",
        "./src/components/SelectedPopulations.tsx",
        "./src/typings/custom.d.ts"
    ]
}