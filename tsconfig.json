{
    "compilerOptions": {
        "outDir": "./",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        //"noUnusedLocals": true,
        //"noUnusedParameters": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    //Adding files here individually is required to have VisualStudio Code 
    //accept the decorator syntax. Hopefully this will be fixed in the future
    "files": [
        "./main.ts",
        "./renderer.ts",
        "./src/mainWindow.tsx",
        "./src/plotWindow.tsx",
        "./src/stores/ImageStore.tsx",
        "./src/components/IMCImage.tsx",
        "./src/components/ImageViewer.tsx",
        "./src/components/ChannelControls.tsx",
        "./src/components/ViewPort.tsx",
        "./src/components/LabelLayerView.tsx",
        "./src/components/LayerTable.tsx",
        "./src/components/SegmentationControls.tsx",
        "./src/components/ScatterPlot.tsx",
        "./src/components/SelectedRegions.tsx"
    ]
}