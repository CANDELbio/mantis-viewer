{
    "compilerOptions": {
        "outDir": "./",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es2018",
        "jsx": "react",
        "moduleResolution": "node",
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "main.ts",
        "src/**/*.ts",
        "typings/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules/**"
    ]
}