{
    "compilerOptions": {
        "outDir": "./",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es2018",
        "jsx": "react",
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
          }
    },
    "include": [
        "main.ts",
        "src/**/*.ts",
        "typings/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules/**"
    ]
}