{
    "name": "mantis-viewer",
    "version": "1.1.0-alpha.4",
    "description": "Electron application to visualize multidimensional microscopy data",
    "main": "main.js",
    "scripts": {
        "start": "electron . debug",
        "build": "tsc main.ts --sourceMap && webpack",
        "pack": "electron-builder --dir",
        "dist": "electron-builder -mwl --x64",
        "test": "jest",
        "eslint": "eslint --ext .tsx --ext .ts .",
        "eslint-fix": "eslint --fix --ext .tsx --ext .ts ."
    },
    "repository": "https://github.com/ParkerICI/imc-viewer-js",
    "keywords": [
        "Electron",
        "Microscopy"
    ],
    "build": {
        "appId": "com.mantis-viewer.app",
        "mac": {
            "category": "public.app-category.medical",
            "target": "dmg"
        },
        "win": {
            "target": "nsis"
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": false
        },
        "linux": {
            "target": "AppImage",
            "category": "Development"
        }
    },
    "author": "pici",
    "license": "GPL-3.0",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "@types/concaveman": "^1.1.3",
        "@types/d3-scale": "^2.0.1",
        "@types/jest": "^24.0.9",
        "@types/mousetrap": "^1.6.3",
        "@types/node": "^10.12.10",
        "@types/pixi.js": "^4.8.9",
        "@types/plotly.js": "^1.50.7",
        "@types/react": "16.8.4",
        "@types/react-color": "^2.13.6",
        "@types/react-dom": "^16.8.2",
        "@types/react-motion": "0.0.27",
        "@types/react-select": "^3.0.4",
        "@types/reactstrap": "^8.0.1",
        "@types/shortid": "0.0.29",
        "@types/underscore": "^1.9.2",
        "@types/xml2js": "^0.4.5",
        "@typescript-eslint/eslint-plugin": "^2.28.0",
        "@typescript-eslint/parser": "^2.28.0",
        "acorn": "^6.4.1",
        "canvas": "^2.6.1",
        "css-loader": "^0.27.3",
        "electron": "^8.2.2",
        "electron-builder": "^22.5.1",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.19.0",
        "file-loader": "^4.2.0",
        "fsevents": "^2.1.2",
        "husky": "^4.2.5",
        "ify-loader": "^1.1.0",
        "jest": "^24.3.0",
        "lint-staged": "^8.1.4",
        "prettier": "^2.0.3",
        "source-map-loader": "^0.2.4",
        "spectron": "^5.0.0",
        "style-loader": "^0.16.0",
        "ts-jest": "^24.0.0",
        "ts-loader": "^7.0.0",
        "ts-node": "^8.8.2",
        "typescript": "^3.8.3",
        "webpack": "~4.29.5",
        "webpack-cli": "^3.2.3",
        "webpack-node-externals": "^1.7.2",
        "worker-loader": "^2.0.0"
    },
    "dependencies": {
        "@blueprintjs/core": "^3.18.0",
        "about-window": "^1.13.2",
        "bootstrap": "^4.3.1",
        "concaveman": "^1.1.1",
        "csv-parse": "^4.8.8",
        "csv-stringify": "^5.3.6",
        "d3-scale": "^2.1.2",
        "electron-context-menu": "^0.14.0",
        "electron-store": "^5.0.0",
        "jquery": "^3.4.1",
        "mobx": "^5.9.0",
        "mobx-react": "^5.4.3",
        "mobx-utils": "^5.1.0",
        "mousetrap": "^1.6.3",
        "normalize.css": "^5.0.0",
        "npm": "^6.14.4",
        "pixi.js": "^4.8.9",
        "plotly.js": "^1.53.0",
        "popper.js": "^1.15.0",
        "pretty-ms": "^5.0.0",
        "react": "^16.8.2",
        "react-color": "^2.17.3",
        "react-dom": "^16.8.2",
        "react-flexbox-grid": "^2.1.2",
        "react-icons": "^3.7.0",
        "react-motion": "^0.5.2",
        "react-select": "^3.0.4",
        "react-sizeme": "^2.6.7",
        "react-table-container": "^2.0.3",
        "react-transition-group": "^2.5.0",
        "reactstrap": "^8.0.1",
        "shortid": "^2.2.13",
        "underscore": "^1.9.1",
        "xml2js": "^0.4.23"
    }
}
